---
import { Image } from "@astrojs/image/components";
const getDate = (date: string) => {
  const dateParts = date.split("-").map((e) => Number(e));
  return new Date(dateParts[2], dateParts[1] - 1, dateParts[0]).valueOf();
};
// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob("/src/pages/blog/*.md")).sort(
  (a, b) => getDate(b.frontmatter.pubDate) - getDate(a.frontmatter.pubDate)
);
---

<ul role="list">
  {
    posts.map(({ url, frontmatter }) => (
      <li>
        <a href={url}>
          <figure>
            <Image
              src={frontmatter.heroImage}
              alt={frontmatter.altImage}
              width={500}
              aspectRatio={1.33}
              fit="contain"
              background="transparent"
              format="webp"
            />
          </figure>
          <h2>{frontmatter.title}</h2>
          <p>{frontmatter.description}</p>
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: grid;
    --content-width: clamp(20rem, 40vw, 40rem);
    width: var(--content-width);
    margin: auto;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    padding: 0;
  }

  a {
    display: grid;
    position: relative;
    gap: 1rem;
    color: var(--clr-white);
    align-items: center;
    text-decoration: none;
    justify-items: center;
    border-radius: 0.5rem;
    overflow: hidden;
    padding-bottom: 1rem;
    transform: scale(1);
    transition: transform 0.2s;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
  }
  a:hover {
    transform: scale(1.05) rotate(-2deg);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }

  li:nth-child(3n) a {
    background-color: var(--clr-red);
  }
  li:nth-child(3n + 1) a {
    background-color: var(--clr-blue);
  }
  li:nth-child(3n + 2) a {
    background-color: var(--clr-green);
  }
  h2 {
    font-family: var(--font-title);
    padding-inline: 1rem;
  }
  p {
    padding-inline: 1rem;
  }
  figure {
    width: min(500px, var(--content-width));
    height: min(500px, var(--content-width));
  }
  img {
    width: 100%;
    height: 100%;
  }
</style>
